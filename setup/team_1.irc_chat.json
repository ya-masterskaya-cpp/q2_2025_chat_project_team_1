{
  "app-id": "io.team_1.irc_chat",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "Client",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "jsoncpp",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/open-source-parsers/jsoncpp/archive/1.9.5.tar.gz",
          "sha256": "f409856e5920c18d0c2fb85276e24ee607d2a09b5e7d5f0a371368903c275da2",
          "dest": "."
        }
      ],
      "build-commands": [
        "mkdir build && ls -al && cd build && ls -al && cmake -DCMAKE_INSTALL_PREFIX=/app -DJSONCPP_WITH_TESTS=OFF -DBUILD_SHARED_LIBS=ON .. && make -j$(nproc) && make install"
      ]
    },
    {
      "name": "drogon",
      "buildsystem": "cmake",
      "config-opts": [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_EXAMPLES=OFF",
        "-DBUILD_ORM=OFF",
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/drogonframework/drogon.git",
          "tag": "v1.8.3"
        }
      ]
    },
    {
      "name": "postgresql",
      "buildsystem": "autotools",
      "config-opts": [
        "--prefix=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://ftp.postgresql.org/pub/source/v14.5/postgresql-14.5.tar.gz",
          "sha256": "90ead393dbc654cb0075eaaf0ec2058e6b9866ced478fed3cf2b68a5bc04eb24"
        }
      ]
    },
    {
      "name": "libpqxx",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_DOC=OFF",
        "-DBUILD_TEST=OFF"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/jtv/libpqxx.git",
          "tag": "7.7.5"
        }
      ]
    },
    {
      "name": "zlib",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DBUILD_SHARED_LIBS=ON"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/madler/zlib/releases/download/v1.3/zlib-1.3.tar.gz",
          "sha256": "ff0ba4c292013dbc27530b3a81e1f9a813cd39de01ca5e0f8bf355702efa593e"
        }
      ]
    },
    {
      "name": "cpr",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_PREFIX_PATH=/app",
        "-DCPR_FORCE_USE_SYSTEM_CURL=ON",
        "-DCPR_BUILD_TESTS=OFF",
        "-DCPR_FORCE_USE_SYSTEM_ZLIB=ON",
        "-DZLIB_ROOT=/app",
        "-DCMAKE_CXX_FLAGS=-Wno-deprecated-declarations"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libcpr/cpr.git",
          "tag": "1.10.0",
          "disable-fetch-content": true
        }
      ]
    },
    {
      "name": "ixwebsocket",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/machinezone/IXWebSocket.git",
          "tag": "v11.4.4"
        }
      ]
    },
    {
      "name": "wxWidgets",
      "buildsystem": "cmake",
      "config-opts": [
        "-DwxBUILD_SHARED=ON",
        "-DwxUSE_X11=ON",
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/wxWidgets/wxWidgets.git",
          "tag": "v3.2.2.1"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DBUILD_SHARED_LIBS=ON",
        "-Dgtest_force_shared_crt=ON"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/google/googletest.git",
          "tag": "release-1.12.1"
        }
      ]
    },
    {
      "name": "irc-chat",
      "buildsystem": "simple",
      "config-opts": [
        "-DCMAKE_PREFIX_PATH=/app"
      ],
      "build-commands": [
        "export LIBRARY_PATH=../lib:$LIBRARY_PATH && mkdir -p build && cd build && cmake ../client/ -DCMAKE_INSTALL_PREFIX=/app -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_RPATH=/app/lib && cmake --build . && cmake --install ."
      ],
      "sources": [
        {
          "type": "git",
          "url": "ssh://git@github.com/ya-masterskaya-cpp/q2_2025_chat_project_team_1.git",
          "branch": "client"
        }
      ]
    }
  ]
}
